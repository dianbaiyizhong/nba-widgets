<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#848D8F" />
        </shape>
    </item>


    <item
        android:width="50dp"
        android:gravity="left">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#848D8F"
                android:startColor="#152238" />
        </shape>
    </item>


    <item
        android:width="50dp"
        android:gravity="right"
        android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#848D8F"
                android:endColor="#152238" />
        </shape>
    </item>
</layer-list>