<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1D478A" />
        </shape>
    </item>


    <item
        android:width="50dp"
        android:gravity="left">
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#1D478A"
                android:startColor="#152238" />
        </shape>
    </item>


    <item
        android:width="50dp"
        android:gravity="right"
        android:right="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:centerColor="#1D478A"
                android:endColor="#152238" />
        </shape>
    </item>
</layer-list>