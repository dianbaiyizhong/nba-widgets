<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/score_board_border"
    android:orientation="vertical"
    android:padding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="45">


        <LinearLayout
            android:id="@+id/hour_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_200">

            <FrameLayout
                android:id="@+id/hour_view_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="HOU"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_hour_logo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/logo_lakers"
                        android:visibility="gone">

                    </ImageView>


                    <TextView
                        android:id="@+id/tv_guest_team_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="127"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="gone">

                    </TextView>

                    <TextClock
                        android:id="@+id/tc_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:format12Hour="hh"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/score_board_border_color" />


        <LinearLayout
            android:id="@+id/min_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200">

            <FrameLayout
                android:id="@+id/min_view_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_min"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"

                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="MIN"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_min_logo"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/logo_warriors"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_home_team_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="127"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="gone">

                    </TextView>

                    <TextClock
                        android:id="@+id/tc_min"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:format12Hour="mm"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/score_board_border_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="21"
        android:background="#191919">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/battery_01"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/battery_02"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/battery_03"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/battery_04"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/battery_05"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/battery_06"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/battery_07"
                style="@style/blockStyle" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:id="@+id/wifi_01"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/wifi_02"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/wifi_03"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/wifi_04"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/wifi_05"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/wifi_06"
                style="@style/blockStyle" />

            <LinearLayout
                android:id="@+id/wifi_07"
                style="@style/blockStyle" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/score_board_border_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#050505">

            <LinearLayout
                android:id="@+id/btn_look_game"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextClock
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:format12Hour="EEEE"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center">

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:format12Hour="MM:dd"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/score_board_border_color" />

            <LinearLayout
                android:id="@+id/btn_launch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:format12Hour=":ss"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:textColor="@color/score_board_border_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>